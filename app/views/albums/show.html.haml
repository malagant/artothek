%p
  = image_tag @album.cover.url(:medium)
%p
  %b Title:
  = @album.title
%p
  %b Subtitle:
  = @album.subtitle
%p
  %b Description:
  = @album.description
%p
  %b Issue date:
  = @album.issue_date

= render :partial => 'tracks/track_list', :locals => { :tracks => @album.tracks }
- if manager(@album.user)
  = link_to 'Edit', edit_user_album_path(@album)
  \|
= link_to 'Back', user_albums_path
