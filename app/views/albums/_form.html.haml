= form_for :album, :url => user_albums_path(current_user), :html => { :method => 'post'} do |f|
  -if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :artist_id
    = f.collection_select :artist_id, current_user.artists, :id, :name unless params[:artist_id]
    = artist_name if params[:artist_id]
  .field
    = f.label :subtitle
    = f.text_field :subtitle
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :issue_date
    = f.date_select :issue_date
  .actions
    = f.submit 'Save'
