
%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  - unless resource.errors.empty?
    .error
      = devise_error_messages!
  %p
    = f.label :email
    %br/
    = f.email_field :email, :class => 'text'
  %p
    = f.label :nickname
    %br/
    = f.text_field :nickname, :class => 'text'
  %p
    = f.label :first_name
    %br/
    = f.text_field :first_name, :class => 'text'
  %p
    = f.label :last_name
    %br/
    = f.text_field :last_name, :class => 'text'
  %p
    = f.label :password
    %br/
    = f.password_field :password, :class => 'text'
  %p
    = f.label :password_confirmation, :class => 'text'
    %br/
    = f.password_field :password_confirmation, :class => 'text'
  %p
    = submit_for "Sign up"
    %br
%hr
= render :partial => "devise/shared/links"
